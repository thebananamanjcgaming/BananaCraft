<script language="vbscript">
  Option Explicit

  Sub StartServer()
    On Error Resume Next 
    Set objShell = CreateObject("Wscript.Shell")
    objShell.Run "python -m http.server --bind 127.0.0.1 --directory . 8080", 0, True 
    If Err.Number <> 0 Then
      MsgBox "Failed to start HTTP server on port 8080."
    Else
      MsgBox "HTTP server started successfully on port 8080."
      Dim objShell2
      Set objShell2 = CreateObject("Wscript.Shell")
      objShell2.Run "cmd /c start http://localhost:8080/index.html", 0, True 
    End If
    On Error GoTo 0
  End Sub

  Sub StopServer()
    On Error Resume Next 
    Set objShell = CreateObject("Wscript.Shell")
    objShell.Run "taskkill /IM python.exe /F", 0, True 
    MsgBox "Attempted to stop HTTP server. Please note that this might affect other running Python processes."
    On Error GoTo 0
  End Sub
</script>
</head>
<body>
  <h1>BananaCraft Launcher Legacy (deprecated + OpenGL)</h1>
  <button onclick="StartServer()">Start BananaCraft (Minecraft 1.12.2)</button>
  <button onclick="StopServer()">Stop BananaCraft</button>
    <footer>
    <p>&copy; Copyright Mojang AB</p>
  </footer>
</body>
</html>

















